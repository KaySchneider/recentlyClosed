{
    "name": "__MSG_appName__",
    "manifest_version": 2,
    "version": "0.1",
    "description": "__MSG_appDesc__",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png",
        "256": "icons/icon256.png"
    },
    "default_locale": "en",
    "browser_action": {
        "default_icon": "icons/icon19.png",
        "default_title": "__MSG_apphover",
        "default_popup": "src/main.html"
    },
    "background": {
        "scripts": ["js/eventPage.min.js"],
        "persistent": false
    },
    "permissions": [
        "http://*.google.com/",
        "bookmarks",
        "chrome://favicon/",
        "clipboardRead",
        "clipboardWrite",
        "contextMenus",
        "history",
        "tabs",
        "unlimitedStorage",
        "<all_urls>",
        "topSites" ],
    "content_security_policy": "script-src https://api.twitter.com; object-src 'self'"
}